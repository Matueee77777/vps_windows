{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
       "defaultValue": "adminpexabo",
       "value": "adminpexabo"
    },
    "adminPassword": {
       "defaultValue": "KKmm1234!KKmm1234!",
       "value": "KKmm1234!KKmm1234!"
    },
    "vmName": {
      "type": "string",
      "defaultValue": "simple-vm",
      "metadata": {
        "description": "Name of the virtual machine."
      }
    },
    "dnsLabelPrefix": {
       "defaultValue":  "[toLower(concat(parameters('vmName'),'-', uniqueString(resourceGroup().id, parameters('vmName'))))]",
       "value":  "[toLower(concat(parameters('vmName'),'-', uniqueString(resourceGroup().id, parameters('vmName'))))]"
    }
  }
}
